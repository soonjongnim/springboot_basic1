<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.soon9086.basic1.boundedContext.board.mapper.BoardMapper">

    <insert id="insertBoard">
        INSERT INTO board (title, content)
        VALUES (#{title}, #{content})
    </insert>

    <select id="selectBoardList" resultType="Board">
        SELECT id, title, content, created_at AS createdAt
        FROM board
        ORDER BY id DESC
    </select>

    <select id="selectBoardById" parameterType="Long"
            resultType="com.soon9086.basic1.boundedContext.board.model.Board">
        SELECT id, title, content, created_at AS createdAt
        FROM board
        WHERE id = #{id}
    </select>

    <update id="updateBoard">
        UPDATE board
        SET
            title = #{title},
            content = #{content},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM board
        WHERE id = #{id}
    </delete>

</mapper>
